<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sali.autotracking"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>

    <application
        android:icon="@drawable/ic_launcher_2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.sali.autotracking.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sali.autotracking.Offline"
            android:label="@string/title_activity_offline"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.sali.autotracking.Online"
            android:label="@string/title_activity_online" >
        </activity>
        <activity
            android:name="com.sali.autotracking.AutoColect"
            android:label="@string/title_activity_auto_colect" >
        </activity>
        <activity
            android:name="com.sali.autotracking.LoopColect"
            android:label="@string/title_activity_loop_colect" >
        </activity>

        <service
            android:name="com.sali.autotracking.Bridge"
            android:enabled="false"
            android:exported="false" >
        </service>
    </application>

</manifest>